<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<header>
    <div class="menu">

        <ul>
            <img src="{{ asset('images/007.png') }}" width="100" alt="logo Bond">
            <li><a href="{{ path('home') }}">Liste des missions</a></li>
            {% if app.user %}
                <li><a href="{{ path('admin') }}">Admin Dashboard</a></li>
                <li><a href="{{ path('app_logout') }}">Se d√©connecter</a></li>
            {% else %}
                <li><a href="{{ path('app_login') }}">Se connecter</a></li>
            {% endif %}
            <form action="{{ path('mission_search') }}">
                <label for="q">titre de mission</label>
                <input type="text" name="q">
                <input type="submit" value="Rechercher">
            </form>
        </ul>

    </div>

</header>
{% block body %}{% endblock %}
</body>
</html>
